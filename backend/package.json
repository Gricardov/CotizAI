{
  "name": "@cotizai-app/backend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "migration:generate": "npm run build && npx typeorm migration:generate -d ./dist/config/data-source.js",
    "migration:run": "npm run build && npx typeorm migration:run -d ./dist/config/data-source.js",
    "migration:revert": "npm run build && npx typeorm migration:revert -d ./dist/config/data-source.js",
    "migration:show": "npm run build && npx typeorm migration:show -d ./dist/config/data-source.js",
    "migrate": "ts-node src/scripts/run-migrations.ts"
  },
  "nx": {
    "targets": {
      "build": {
        "executor": "nx:run-commands",
        "options": {
          "command": "webpack-cli build",
          "args": [
            "--node-env=production"
          ]
        },
        "configurations": {
          "development": {
            "args": [
              "--node-env=development"
            ]
          }
        }
      },
      "serve": {
        "continuous": true,
        "executor": "@nx/js:node",
        "defaultConfiguration": "development",
        "dependsOn": [
          "build"
        ],
        "options": {
          "buildTarget": "@cotizai-app/backend:build",
          "runBuildTargetDependencies": false
        },
        "configurations": {
          "development": {
            "buildTarget": "@cotizai-app/backend:build:development"
          },
          "production": {
            "buildTarget": "@cotizai-app/backend:build:production"
          }
        }
      },
      "test": {
        "options": {
          "passWithNoTests": true
        }
      }
    }
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/typeorm": "^11.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/mongodb": "^4.0.6",
    "@types/pg": "^8.15.5",
    "bcryptjs": "^3.0.2",
    "mongodb": "^6.18.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.1.14",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "ts-node": "^10.9.1"
  }
}
